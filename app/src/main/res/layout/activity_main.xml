<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ryan.screenrecoder.ui.activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button_tcp_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收端" />

        <TextView
            android:id="@+id/current_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button_tcp_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送端" />

        <EditText
            android:id="@+id/edittext_tcp_send_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入ip地址,默认192.168.0.132" />
    </LinearLayout>
</LinearLayout>
